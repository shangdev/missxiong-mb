<script>
  import wepy from 'wepy'
  import 'wepy-async-function'

  import {setStore} from 'wepy-redux'
  import configStore from './store'

  const store = configStore()
  setStore(store)

  export default class extends wepy.app {
    config = {
      pages: [
        'pages/index',
        'pages/member',
        'pages/single'
      ],
      window: {
        navigationBarBackgroundColor: '#e71a19',
        navigationBarTitleText: '熊熊的小站',
        navigationBarTextStyle: '#fff',
        backgroundTextStyle: '#fff',
        backgroundColor: '#e71a19',
        enablePullDownRefresh: true
      },
      tabBar: {
        color: '#000',
        selectedColor: '#097c25',
        backgroundColor: '#fff',
        list: [
          {
            pagePath: 'pages/index',
            text: '概览',
            iconPath: './resources/icons/home.png',
            selectedIconPath: './resources/icons/home-on.png'
          },
          {
            pagePath: 'pages/member',
            text: '我的',
            iconPath: './resources/icons/member.png',
            selectedIconPath: './resources/icons/member-on.png'
          }
        ]
      },
      debug: true
    }

    globalData = {
      token: '',
      userID: '',
      userInfo: ''
    }

    constructor() {
      super()
      this.use('requestfix')
      this.use('promisify')
    }

    onLaunch() {
      const self = this

      // 查看用户是否登录
      if (wepy.getStorageSync('userID') && wepy.getStorageSync('token')) {
        this.globalData.token = wepy.getStorageSync('token')
        this.globalData.userID = wepy.getStorageSync('userID')
      }

      // 查看是否授权
      wepy.getSetting((res) => {
        if (res.authSetting['scope.userInfo']) {
          // 已经授权，可以直接调用 getUserInfo 获取头像昵称
          wepy.getUserInfo((resData) => {
            self.globalData.userInfo = resData.userInfo
          })
        }
      })
    }
  }
</script>
